<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".YacsaApplication"
        android:label="@string/app_name">
        <activity
            android:name="dev.yacsa.main.screen.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <!--                <data android:scheme="yacsa" android:host="*"/>-->

            </intent-filter>
            <intent-filter>
                <data
                    android:host="*"
                    android:scheme="yacsa" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <service
            android:name="dev.yacsa.main.tile.FavouriteTileService"
            android:icon="@drawable/icon_book_regular_24"
            android:label="@string/general_qt"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

</manifest>