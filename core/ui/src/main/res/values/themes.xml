<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.Yacsa" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.Yacsa" parent="NightAdjusted.Theme.Yacsa">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.Yacsa" parent="PlatformAdjusted.Theme.Yacsa" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Yacsa.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenBackground">#6667AB</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Yacsa</item>
    </style>

</resources>